{
  
  "extends": "expo/tsconfig.base",

  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": [
      "es6",
      "DOM",
      "ESNext"
    ],
    "allowJs": true,
    "checkJs": false,
    "jsx": "react-native",
    "removeComments": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "src/*": [
        "./src/*"
      ],
      "lib/*": [
        "./src/lib/*"
      ],
      "components/*": [
        "./src/components/*"
      ],
      "@api/*": [
        "./src/api/*"
      ],
      "@interface/*": [
        "./src/api/interface/*"
      ],
      "@/p138-react-common/*": [
        "p138-react-common/*"
      ],
      "@/config/*": [
        "src/config/*"
      ],
      "@/utils/*": [
        "src/utils/*"
      ],
      "@/api/*": [
        "src/api/*"
      ],
      ".": [
        "./index"
      ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/types",
      "./types"
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/*.test.tsx",
    "node_modules/react-native-view-shot"
  ],
}
